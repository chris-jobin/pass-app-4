
@if (IsAuthorized)
{
    @ChildContent

    <DeleteModal @ref="DeleteRef" Text="Are you sure you want to delete this profile and all records that belong to it?" RequireConfirmation OnDelete="OnDeleteProfile"/>
}
else
{
    <PassAppModal Size="md" Centered ShowOnLoad HideFooter>
        <MessageComponent @ref="Message"/>
        @if (HasUser)
        {
            <LoginForm @ref="LoginRef" OnLogin="Login"/>
        }
        else
        {
            <RegisterForm @ref="RegisterRef" OnRegister="Register"/>
        }
    </PassAppModal>
}
