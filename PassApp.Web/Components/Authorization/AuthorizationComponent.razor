@using PassApp.Web.Components.Modal

@if (IsAuthorized)
{
    @ChildContent
}
else
{
    <Modal @ref="ModalRef" Size="md" Centered ShowOnLoad HideTopAndBottom>
        @if (AuthType == AuthorizationType.Login)
        {
            <LoginForm OnLogin="Authorize" OnRegister="ToggleAuthType" />
        }
        else if (AuthType == AuthorizationType.Register)
        {
            <RegisterForm OnRegister="Register" OnLogin="ToggleAuthType" />
        }
    </Modal>
}
