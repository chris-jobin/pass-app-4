
<div class="input-group">
    @if (ShowValue)
    {
        <input type="text" id="@Id" class="form-control" value="@Value" @onchange="@((e) => OnValueChanged(e.Value.ToString()))" />
    }
    else
    {
        <input type="password" id="@Id" class="form-control" value="@Value" @onchange="@((e) => OnValueChanged(e.Value.ToString()))" />
    }
    <button type="button" class="btn btn-outline-secondary" tabindex="-1" @onmousedown="Show" @onmouseup="Hide">
        <span class="oi oi-eye"></span>
    </button>
</div>
