@using PassApp.Shared.Form
@using PassApp.Shared.Validation

@if (Model != null)
{
    @if (RegisterError)
    {
        <div class="alert alert-danger border-danger text-center">
            <span class="oi oi-warning text-danger"></span>
            Register Attempt Failed
        </div>
    }
    <ValidationForm @ref="Context" Model="Model">
        <form>
            <div class="py-1">
                <Label For="@(() => Model.Username)" />
                <input type="text" class="form-control" @bind-value="Model.Username" />
                <ValidationComponent For="@(() => Model.Username)" />
            </div>
            <div class="py-1">
                <Label For="@(() => Model.Password)" />
                <PasswordComponent @bind-Value="Model.Password" />
                <ValidationComponent For="@(() => Model.Password)" />
            </div>
            <div class="py-1">
                <Label For="@(() => Model.ConfirmPassword)" />
                <PasswordComponent @bind-Value="Model.ConfirmPassword" />
                <ValidationComponent For="@(() => Model.ConfirmPassword)" />
                <ValidationComponent For="@(() => Model.PasswordMatch)" />
            </div>
            <div class="py-4">
                <button class="btn btn-primary" @onclick="Register">
                    <span class="oi oi-person"></span>
                    Register
                </button>
            </div>
        </form>
    </ValidationForm>
}
